@model W2_test.Models.Blog

@{
    ViewData["Title"] = "Xoá bài viết";
}

<h2>@ViewData["Title"]</h2>

<h4>Bạn có chắc chắn muốn xoá bài viết này?</h4>
<hr />

<div>
    <dl class="row">
        <dt class="col-sm-2">Tiêu đề</dt>
        <dd class="col-sm-10">@Model.Title</dd>

        <dt class="col-sm-2">Nội dung</dt>
        <dd class="col-sm-10">@Model.Content</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Xoá</button>
    <a asp-action="Index" class="btn btn-secondary">Huỷ</a>
</form>
